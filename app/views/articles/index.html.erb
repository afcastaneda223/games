<h1>Articles</h1>

<table class="table table-light table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= article.user_id %></td>
        <td><%= link_to 'Show', article, class: "btn btn-dark" %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-dark" %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class: "btn btn-primary my-3" %>
